output "knowledge_base_id" {
  description = "The ID of the Knowledge Base"
  value       = awscc_bedrock_knowledge_base.main.knowledge_base_id
}

output "knowledge_base_arn" {
  description = "The ARN of the Knowledge Base"
  value       = awscc_bedrock_knowledge_base.main.knowledge_base_arn
}

output "data_source_id" {
  description = "The ID of the S3 Data Source"
  value       = awscc_bedrock_data_source.s3.data_source_id
}

output "documents_bucket_name" {
  description = "Name of the S3 bucket for documents"
  value       = aws_s3_bucket.documents.id
}

output "documents_bucket_arn" {
  description = "ARN of the S3 bucket for documents"
  value       = aws_s3_bucket.documents.arn
}

output "vectors_bucket_name" {
