# Development Environment Configuration

# Environment
ENVIRONMENT=development

# Server Configuration
SERVER_PORT=8080
SERVER_HOST=0.0.0.0

# AWS Configuration
# For local development, use AWS credentials or AWS CLI profile
AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_access_key_id
# AWS_SECRET_ACCESS_KEY=your_secret_access_key
# AWS_SESSION_TOKEN=your_session_token  # Optional, for temporary credentials

# Amazon Bedrock Agent Core Configuration
# Leave empty to run in mock mode without Bedrock integration
BEDROCK_AGENT_ID=
BEDROCK_AGENT_ALIAS_ID=
BEDROCK_KNOWLEDGE_BASE_ID=
BEDROCK_MODEL_ID=anthropic.claude-v2

# Bedrock Retry Configuration
BEDROCK_MAX_RETRIES=3
BEDROCK_INITIAL_BACKOFF=1s
BEDROCK_MAX_BACKOFF=30s
BEDROCK_REQUEST_TIMEOUT=60s

# WebSocket Configuration
WS_TIMEOUT=30s
WS_BUFFER_SIZE=8192
WS_READ_BUFFER_SIZE=1024
WS_WRITE_BUFFER_SIZE=1024
WS_STREAM_TIMEOUT=5m
WS_CHUNK_TIMEOUT=30s

# Session Configuration
SESSION_TIMEOUT=30m

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=text
